<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>

<HBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="be.naaturel.filemanager.controller.StartController"
styleClass="container">


  <VBox styleClass="inputBox">
    <Label text="Path to start from..."> </Label>
    <TextField fx:id="chosenPath"/>
    <Button text="Start" onAction="#onStartButtonClick"/>
  </VBox>

  <VBox fx:id="analyseBox" styleClass="analyseBox">
    <Label text="Analyse..."> </Label>
  </VBox>

  <VBox fx:id="detailsBox" styleClass="detailsBox">
    <Label text="Details..."> </Label>
  </VBox>

</HBox>
