<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane xmlns:fx="http://javafx.com/fxml"
          fx:controller="be.naaturel.filemanager.controller.StartController">

  <padding>
    <Insets top="25" right="25" bottom="10" left="25"/>
  </padding>

  <VBox GridPane.columnIndex="1" GridPane.rowIndex="1">

    <Label text="Path to start from..."> </Label>
    <TextField fx:id="chosenPath"/>
    <Button text="Start" onAction="#onStartButtonClick"/>

  </VBox>

  <VBox fx:id="analyseBox"
        GridPane.columnIndex="2" GridPane.rowIndex="1">
    <Label text="Analyse..."> </Label>
  </VBox>
</GridPane>
